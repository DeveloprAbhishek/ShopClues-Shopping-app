<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmptyWishList">

    <LinearLayout
        android:id="@+id/emptyWishlistTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar"
        android:orientation="horizontal"
        android:padding="16dp">


        <ImageView
            android:id="@+id/emptyWishlistArrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/emptyWishlist"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:src="@drawable/main_logo" />

        <ImageView
            android:id="@+id/EmptyWishList_NotificationIcon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/notification_icon" />


        <ImageView
            android:id="@+id/emptyWishlistCartIcon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:src="@drawable/cart_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emptyWishlistTopBar"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/empty_bag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:text="Empty Wishlist"
            android:textColor="#610404"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="No Item in Wishlist , Please Explore our Product"
            android:textColor="#9F7404"
            android:textSize="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/GoToExploreBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FF0000"
        android:gravity="center"
        android:padding="15dp"
        android:text="Goto Explore"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold" />
</RelativeLayout>