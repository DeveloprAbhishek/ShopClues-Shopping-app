<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivArrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/tvLoginActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/ivArrowBack"
            android:layout_toRightOf="@+id/ivArrowBack"
            android:text="Login to Shopclues"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <EditText
        android:id="@+id/etEnterYourNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10sp"
        android:hint="Enter your mobile number or email id" />

    <EditText
        android:id="@+id/etEnterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEnterYourNumber"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10sp"
        android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnLoginViaOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEnterPassword"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_style_loginvia_otp"
        android:gravity="center"
        android:paddingHorizontal="50dp"
        android:text="Login via OTP"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnLoginViaPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEnterPassword"
        android:layout_alignParentRight="true"
        android:layout_marginTop="44dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_style_loginvia_password"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:text="Login via Password"
        android:textAllCaps="false"
        android:textColor="@color/gradientOrange"
        android:textSize="15dp" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEnterPassword"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_style_loginvia_otp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Login "
        android:textAllCaps="false"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/optionToRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvLoginWith"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvDoNotHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvRegisterNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@id/tvDoNotHaveAccount"
            android:layout_toRightOf="@id/tvDoNotHaveAccount"
            android:text="Register Now"
            android:textColor="@color/cyan" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvLoginWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/faceBook_option"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Login with"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/faceBook_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg1"
        android:drawableTop="@drawable/fb_logo"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="facebook"
        android:textColor="#000000" />


</RelativeLayout>
