<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7ECF7F8"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF" />

    <View
        android:id="@+id/hBurger_1"
        android:layout_width="25dp"
        android:layout_height="2dp"
        android:layout_alignLeft="@id/topView"
        android:layout_alignTop="@id/topView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="#07B6DF" />

    <View
        android:id="@+id/hBurger_2"
        android:layout_width="25dp"
        android:layout_height="2dp"
        android:layout_below="@id/hBurger_1"
        android:layout_alignLeft="@id/topView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#07B6DF" />

    <View
        android:id="@+id/hBurger_3"
        android:layout_width="25dp"
        android:layout_height="2dp"
        android:layout_below="@id/hBurger_2"
        android:layout_alignLeft="@id/topView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#07B6DF" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/hBurger_1"
        android:src="@drawable/main_logo" />


    <ImageView

        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/cart_icon"
        android:layout_toLeftOf="@id/cart_icon"
        android:src="@drawable/notification_icon" />


    <ImageView
        android:id="@+id/cart_icon"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/cart_icon" />

    <EditText
        android:id="@+id/search_box"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/topView"
        android:layout_marginLeft="15dp"
        android:background="@drawable/search_bg"
        android:hint="What is on your mind today?"
        android:paddingVertical="10dp"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/search_box"
        android:layout_toRightOf="@id/search_box"
        android:background="#F2FB3C00"
        android:src="@drawable/search_icon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_box">

        <RelativeLayout

            android:id="@+id/signIn_force"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_box"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg1"
            android:paddingVertical="20dp">

            <ImageView
                android:id="@+id/userLogo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/user_logo_bg"
                android:src="@drawable/user_logo_icon" />

            <TextView
                android:id="@+id/SF_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/userLogo"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/userLogo"
                android:text="You are missing out"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SF_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/SF_line1"
                android:layout_alignLeft="@id/SF_line1"
                android:layout_toRightOf="@id/userLogo"
                android:text="Sign in fir the best offers"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/sign_btn_bg"
                android:padding="10dp"
                android:text="SIGN IN"
                android:textColor="#FFFFFF" />

        </RelativeLayout>



    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="5">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/home_icon"
            android:gravity="center"
            android:text="Home"
            android:textColor="#07B6DF"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/category_icon"
            android:gravity="center"
            android:text="Categories"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/money_icon"
            android:gravity="center"
            android:text="Make Money"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/offer_icon"
            android:gravity="center"
            android:text="Offers"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/account_icon"
            android:gravity="center"
            android:text="Account"
            android:textSize="15dp" />


    </LinearLayout>
</RelativeLayout>