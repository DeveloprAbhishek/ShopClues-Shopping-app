<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60DFD5D5"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:text="Clothing"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivCategorySubImage1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/tshirts_navtile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tvCategorySubName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T-Shirts"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ivCategorySubImage1"
            app:layout_constraintStart_toStartOf="@id/ivCategorySubImage1"
            app:layout_constraintEnd_toEndOf="@id/ivCategorySubImage1"/>

        <ImageView
            android:id="@+id/ivCategorySubImage2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/jeans_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivCategorySubImage1"
            app:layout_constraintEnd_toStartOf="@id/ivCategorySubImage3"
            />

        <TextView
            android:id="@+id/tvCategorySubName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeans"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ivCategorySubImage2"
            app:layout_constraintStart_toStartOf="@id/ivCategorySubImage2"
            app:layout_constraintEnd_toEndOf="@id/ivCategorySubImage2"/>

        <ImageView
            android:id="@+id/ivCategorySubImage3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/track_paints_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivCategorySubImage2"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tvCategorySubName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Pants"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ivCategorySubImage3"
            app:layout_constraintStart_toStartOf="@id/ivCategorySubImage3"
            app:layout_constraintEnd_toEndOf="@id/ivCategorySubImage3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivCategorySubImage4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/shirts"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tvCategorySubName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shirts"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ivCategorySubImage4"
            app:layout_constraintStart_toStartOf="@id/ivCategorySubImage4"
            app:layout_constraintEnd_toEndOf="@id/ivCategorySubImage4"/>

        <ImageView
            android:id="@+id/ivCategorySubImage5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/trouser"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivCategorySubImage4"
            app:layout_constraintEnd_toStartOf="@id/ivCategorySubImage6"
            />

        <TextView
            android:id="@+id/tvCategorySubName5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trousers"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ivCategorySubImage5"
            app:layout_constraintStart_toStartOf="@id/ivCategorySubImage5"
            app:layout_constraintEnd_toEndOf="@id/ivCategorySubImage5"/>

        <ImageView
            android:id="@+id/ivCategorySubImage6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/winterwear"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivCategorySubImage5"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tvCategorySubName6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Winter Wear"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/ivCategorySubImage6"
            app:layout_constraintStart_toStartOf="@id/ivCategorySubImage6"
            app:layout_constraintEnd_toEndOf="@id/ivCategorySubImage6"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>